<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include
        layout="@layout/toolbar_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <RelativeLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:layout_margin="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <Spinner
        android:id="@+id/spinner_from"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:textSize="26sp"
        android:layout_centerHorizontal="true"
        android:layout_toRightOf="@+id/image_button"/>

    <ImageButton
        android:id="@+id/image_button"
        android:src="@drawable/icon"
        android:layout_height="50dp"
        android:background="@color/colorWhite"
        android:layout_width="50dp"
        android:scaleType="fitXY"/>

    <Spinner
        android:id="@+id/spinner_to"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:textSize="26sp"
        android:layout_centerHorizontal="true"
        android:layout_toRightOf="@+id/image_button"
        android:layout_below="@id/spinner_from"/>

    <TextView android:text="Введите значение для конвертации:"
        android:id="@+id/text_view"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textSize="26sp"
        android:layout_below="@id/spinner_to"
        android:layout_marginTop="100dp"/>

    <EditText
        android:id="@+id/edit_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_view"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/button"
        android:text="Конвертировать"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edit_text"
        android:layout_marginTop="30dp"
        android:onClick="convertValue"/>

    <TextView android:text="Результат:"
        android:id="@+id/result_text"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textSize="26sp"
        android:layout_below="@id/button"
        android:layout_marginTop="50dp"/>

    <TextView android:text=""
        android:id="@+id/result"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textSize="26sp"
        android:layout_below="@id/result_text"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>
</LinearLayout>